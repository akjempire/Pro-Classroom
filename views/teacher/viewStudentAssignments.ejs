<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Assignments Submitted by <%= submissions[0]?.student.username %></h2>

  <h5>Class: <%= classroom.name %></h5>

  <table class="table table-striped shadow rounded">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Assignment Title</th>
        <th>Submission Date</th>
        <th>Plagiarism Percentage</th>
        <th>File</th>
      </tr>
    </thead>
    <tbody>
      <% submissions.forEach((submission, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= submission.assignment ? submission.assignment.title : 'Assignment Deleted' %></td>
          <td><%= new Date(submission.submittedAt).toLocaleDateString() %></td>
          <td><%= submission.plagiarismPercentage ? submission.plagiarismPercentage + '%' : 'N/A' %></td>
          <td>
            <a href="<%= submission.fileUrl.url %>" class="btn btn-sm btn-info" target="_blank">Download</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
  <a href="/teacher/class/<%= classroom._id %>/students" class="btn btn-primary mt-3">Back to Student List</a>
</div>
