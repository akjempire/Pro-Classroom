<!-- views/teacher/assignment-results.ejs -->
<% if (classroom) { %>
  <a href="/teacher/classroom/<%= classroom._id %>" class="btn btn-secondary">
    Back to Classroom
  </a>
<% } else { %>
  <a href="/teacher/dashboard" class="btn btn-secondary">
    Back to Dashboard
  </a>
<% } %>

<% if (report) { %>
  <div class="alert alert-info">
    Check performed on: <%= report.generatedAt.toLocaleString() %>
    | <%= report.results.length %> potential issues found
  </div>

  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Student 1</th>
        <th>Student 2</th>
        <th>Similarity</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% report.results.forEach(comparison => { %>
        <tr class="<%= comparison.similarity > 80 ? 'table-danger' : 'table-warning' %>">
          <td><%= comparison.student1.username %></td>
          <td><%= comparison.student2.username %></td>
          <td><%= comparison.similarity %>%</td>
          <td>
            <button class="btn btn-sm btn-info" data-toggle="collapse" 
                    data-target="#details-<%= comparison._id %>">
              Show Details
            </button>
            <div id="details-<%= comparison._id %>" class="collapse mt-2">
              <pre><%= comparison.details %></pre>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <div class="alert alert-warning">No plagiarism report available</div>
<% } %>

<a href="/teacher/classroom/<%= classroom._id %>" class="btn btn-secondary">
  Back to Classroom
</a>