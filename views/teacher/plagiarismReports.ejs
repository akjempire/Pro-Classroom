<% layout('layouts/boilerplate') %>

    <style>
        .report-card {
            background: #fff;
            padding: 18px;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
            margin-bottom: 18px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            border-bottom: 1px solid #eee;
            text-align: left;
        }

        th {
            background: #f3f7ff;
            font-weight: 600;
        }

        .btn-details {
            background: #4a78ff;
            color: #fff;
            padding: 8px 12px;
            border-radius: 6px;
            text-decoration: none;
        }
    </style>

    <div class="container mt-4">
        <h2>ðŸ“‘ Plagiarism Reports</h2>
        <hr>

        <% if (!reports || reports.length===0) { %>
            <p>No plagiarism reports found for this class.</p>
            <% } else { %>

                <% reports.forEach((r)=> { %>
                    <div class="report-card">
                        <h4>Assignment: <%= r.assignment ? r.assignment.title : "Deleted Assignment" %>
                        </h4>
                        <p><b>Generated:</b>
                            <%= r.generatedAt.toLocaleString() %>
                        </p>
                        <p><b>Total Pairs:</b>
                            <%= r.results.length %>
                        </p>

                        <table class="mt-3">
                            <thead>
                                <tr>
                                    <th>Student 1</th>
                                    <th>Student 2</th>
                                    <th>Similarity</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% r.results.forEach((pair, idx)=> { %>
                                    <tr>
                                        <td>
                                            <%= pair.student1 ? pair.student1.username : "Deleted" %>
                                        </td>
                                        <td>
                                            <%= pair.student2 ? pair.student2.username : "Deleted" %>
                                        </td>
                                        <td>
                                            <%= pair.similarity %>%
                                        </td>
                                        <td>
                                            <a href="/teacher/class/<%= r.classroom %>/plagiarism/<%= r._id %>/similarity/<%= idx %>"
                                                class="btn-details">
                                                View Details
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% }) %>

                        <% } %>
    </div>