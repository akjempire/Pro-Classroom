<% layout('layouts/boilerplate') %>

  <h3>Submissions for Class: <%= classroom.name %>
  </h3>
  <h4>Assignment: <%= assignment.title %>
  </h4>
  
  <table class="table mt-3">
    <thead>
      <tr>
        <th>Student</th>
        <th>Submission Date</th>
        <th>File</th>
        </tr>
        </thead>
        <tbody>
      <% submissions.forEach(submission=> { %>
        <tr>
          <td>
            <%= submission.student.username %>
          </td>
          <td>
            <%= submission.submittedAt.toLocaleString() %>
          </td>
          <td><a href="<%= submission.fileUrl.url %>" target="_blank">Download</a></td>
          </tr>
          <% }) %>
            </tbody>
  </table>

  <hr>
  
  <% if (submissions.length>= 2) { %>
    <form action="/teacher/class/<%= classroomId %>/assignment/<%= assignmentId %>/run-plagiarism" method="POST">
      <button type="submit" class="btn btn-danger">ğŸ” Run Plagiarism Check</button>
    </form>
    <% } else { %>
      <p style="color:#777">At least 2 submissions required to run plagiarism check.</p>
      <% } %>